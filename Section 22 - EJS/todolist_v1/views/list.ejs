<%- include('header'); -%>

    <div class="box" id="heading">
        <h1><%= kindOfDay %></h1>
    </div>

    <div class="box">
        <% for(var i =0; i<task.length; i++) { %>
        <div class="item">
            <input type="checkbox">
            <p><%= task[i] %></p>
        </div>   
        <%} %>
    
        <form action="/" method="post" class="item">
            <input type="text" placeholder="task" name="task">
            <button type="submit">+</button>
        </form>

    </div>

<%- include('footer'); -%>
